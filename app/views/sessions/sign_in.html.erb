<h1>Sign in to Snarler!</h1>
<p><%=@message%></p>

<%= form_tag sessions_path do %>

  <p>
    <%= label_tag :name %>
    <%= text_field_tag :name %>
  </p>

  <p>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </p>

  <p>
    <%= submit_tag "Sign In" %> or <%= link_to "Sign Up", sign_up_path %>
  </p>
<% end %>
